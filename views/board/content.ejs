<% layout('../template/layout') -%>
<br><br>
<section class="wrapper">	<div class="showback">
    
<div align="center">
    <h3><%=article[0].b_subject%></h3>
</div>    
<hr>
 
<div class="panel panel-defaul" >

    <table class="table table-hover table-condensed" >
        
        
                 <tr>
                     
                    <td width=10 align="center"  style="font-weight:bold;" >글번호</td>
                   <td width=20 align="center"> <%=article[0].b_num%></td>
                </tr>
                <tr>
                   <td width=10 align="center"  style="font-weight:bold;" >제목</td>
                   <td width=20 align="center"> <%=article[0].b_subject%></td>
                </tr>
                 <tr>
                   <td width=10 align="center"  style="font-weight:bold;" >글쓴이</td>
                   <td width=20 align="center"> <%=article[0].b_id%></td>
                </tr>
                <tr>
                   <td width=10 align="center"  style="font-weight:bold;" >등록일</td>
                   <td width=20 align="center"> <%=article[0].b_date%></td>
                </tr>
                <tr>
                   <td width=10 align="center"  style="font-weight:bold;" >조회수</td>
                   <td width=20 align="center"> <%=article[0].b_hits%></td>
                </tr>
                <tr>
                   <tr>
                   <td width=10 align="center" valign ="middle"  style="font-weight:bold;">내용</td>
                  <td width=20 align="center"><%-article[0].b_content%></td>
                </tr>
        
</div>

    </table>
    <hr>
   
    <div style='text-align:right;'>
       
                <button class="btn btn-primary btn-sm" style="margin: 0;" onClick="location.href='/board/<%= boardId%>/update/<%=article[0].b_num%>'" >
                    <span class="glyphicon glyphicon-pencil"></span>글수정
                   
                </button>
        
                <button class="btn btn-primary btn-sm" style="margin: 0;" onClick="location.href='/board/<%= boardId%>/delete/<%=article[0].b_num%>'" >
                    <span class="glyphicon glyphicon-pencil"></span>글삭제
                   
                </button>
    
                <button class="btn btn-primary btn-sm" style="margin: 0;" onClick="location.href='/board/<%= boardId%>/<%= pageNum %>'" >
                    <span class="glyphicon glyphicon-pencil"></span>글목록
                   
                </button>
        
    </div>

</section>
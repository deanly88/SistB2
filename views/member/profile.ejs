<% layout('../template/layout') -%>
<section class="wrapper">
    <div class="col-md-12">
        <div class="page-header text-center">
    		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
    		<a href="/users/logout" class="btn btn-default btn-sm">Logout</a>
    	</div>
    	<div class="row">
    		<!-- LOCAL INFORMATION -->
    		<div class="col-sm-10">
    			<div class="well">
    				<h3><span class="fa fa-user"></span> Local</h3>
    					<p>
    						<img width="100" height="100" src="/uploads/profiles/<%= user[0].reserve_2 %>"><br>
    						<strong>회원 번호</strong>: <%= user[0].id %><br>
    						<strong>E-mail</strong>: <%= user[0].username %><br>
    						<strong>비밀번호</strong>: <%= user[0].password %><br>
    						<strong>이름</strong>: <%= user[0].name  %><br>
    						<strong>별명</strong>: <%= user[0].nick %><br>
    						<strong>성별</strong>: <%= user[0].gender %><br>
    						<strong>전화번호</strong>: <%= user[0].phone %><br>
    						<strong>아기이름</strong>: <%= user[0].b_name %><br>
    						<strong>아기생일</strong>: <%= user[0].b_birth %><br>
    					</p>
    			</div>
    		</div>
    	</div>
    </div>
</section>